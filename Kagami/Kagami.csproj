<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <AnalysisLevel>preview-recommended</AnalysisLevel>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Konata.Core" Version="1.*-*" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Compile Remove="OldFunction\*.cs" />
    <None Include="OldFunction\*.cs" />
    <Compile Remove="Attributes\TriggerAttribute.cs" />
    <None Include="Attributes\TriggerAttribute.cs" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Kagami.Extensions" />
  </ItemGroup>
  
</Project>