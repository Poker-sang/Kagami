<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>preview</LangVersion>
		<Nullable>enable</Nullable>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Konata.Core" Version="1.*-*" />
		<PackageReference Include="Selenium.Support" Version="4.1.1" />
		<PackageReference Include="Selenium.WebDriver" Version="4.1.1" />
		<PackageReference Include="Selenium.WebDriver.MSEdgeDriver" Version="101.0.1210.9-pre" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Kagami.SourceGenerator\Kagami.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Wolfram.NETLink">
			<HintPath>Wolfram.NETLink.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
	  <None Update="Assets\style.css">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>